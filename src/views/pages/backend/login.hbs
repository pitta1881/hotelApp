          <form id='form-login'>
            <div class='control-input input-validator-container'>
              <label for='nick' class='required'>Usuario:</label>
              <input
                type='text'
                name='nick'
                id='nick'
                placeholder='Nick'
                required
              />
              <ul></ul>
            </div>
            <div class='control-input input-validator-container'>
              <label for='password' class='required'>Contrase√±a:</label>
              <input
                type='password'
                name='password'
                id='password'
                placeholder='Password'
                required
              />
              <ul></ul>
            </div>
            <div class='button-container'>
              <button type='submit' class='btn-submit' disabled>Enviar</button>
            </div>
          </form>
        </div>
      </div>
    </main>
    <section id='toast'></section>
    <section id='loader'>
      <span></span>
    </section>
