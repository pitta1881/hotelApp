{{#> layouts/base title="Contacto" }}
  {{#*inline "head-block"}}
    <link rel="stylesheet" href="/css/contacto.css" />
    <script src="/js/contacto.js" defer></script>
  {{/inline}}

  {{#*inline "main-content-block"}}
    <section id="contacto-container" itemscope itemtype="https://schema.org/ContactPage">
        <h3>Contactanos</h3>
        <form
          id="inner-container"
          action="#"
          method="post"
        >
          <div class="container-doble">
            <div class="control-input">
              <label for="nombre">Nombre</label>
              <input type="text" name="nombre" id="nombre" required />
            </div>
            <div class="control-input">
              <label for="apellido">Apellido</label>
              <input type="text" name="apellido" id="apellido" required />
            </div>
          </div>
          <div class="container-doble">
            <div class="control-input">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" required />
            </div>
            <div class="control-input">
              <label for="pais">Pa√≠s de Residencia</label>
              <select name="pais" id="pais" required>
                <option value="AR">Argentina</option>
                <option value="BO">Bolivia</option>
                <option value="UR">Uruguay</option>
                <option value="PA">Paraguay</option>
                <option value="CH">Chile</option>
                <option value="BR">Brasil</option>
              </select>
            </div>
          </div>
          <div class="container-cuatriple">
            <div class="container-doble">
              <div class="control-input">
                <label for="checkin">Check-In</label>
                <input type="date" name="checkin" id="checkin" required />
              </div>
              <div class="control-input">
                <label for="checkout">Check-Out</label>
                <input type="date" name="checkout" id="checkout" required />
              </div>
            </div>
            <div class="container-doble">
              <div class="control-input">
                <label for="adultos">Adultos</label>
                <input
                  type="number"
                  name="adultos"
                  id="adultos"
                  min="1"
                  value="1"
                  required
                />
              </div>
              <div class="control-input">
                <label for="menores">Menores</label>
                <input
                  type="number"
                  name="menores"
                  id="menores"
                  min="0"
                  value="0"
                  required
                />
              </div>
            </div>
          </div>
          <div class="control-input">
            <label for="mensaje">Mensaje</label>
            <textarea
              name="mensaje"
              id="mensaje"
              cols="30"
              rows="10"
              required
            ></textarea>
          </div>
          <div id="button-container">
            <button type="reset">Limpiar</button>
            <button type="submit">Enviar</button>
          </div>
        </form>
      </section>
  {{/inline}}

{{/layouts/base}}